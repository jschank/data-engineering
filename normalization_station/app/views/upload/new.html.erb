<h2>File Upload form</h2>

<p>Please upload a file to be added to the database</p>

<%= form_tag({:controller=>:upload, :action => :upload, :method => :post}, multipart: true) do %>
<%= file_field :data_file, :file %>
<%= submit_tag "Upload" %>
<% end %>

